<!--index.wxml-->
<view>
  <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
    <block  wx:for="{{bannerImg}}"  wx:for-index="index" wx:key="id">
      <swiper-item>
        <image class="bannerSwiper" src="{{item.picUrl}}" class="slide-image" width="100%" height="150" />
      </swiper-item>
    </block>
  </swiper>

  <scroll-view  class="navList"  scroll-x style="height: 200rpx;" bindscrolltoupper="upper" bindscrolltolower="lower" bindscroll="scroll" scroll-into-view="{{toView}}" scroll-left="0"  >
     <view wx:for="{{navBarLink}}" class="flex-item">
      <text> {{item.name}}</text>
     </view>
  </scroll-view>

</view>